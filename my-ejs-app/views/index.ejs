<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Quiz Master</title>

  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body class="bg-gray-100 font-[Poppins]">

  <!-- Navbar -->
  <nav class="bg-white shadow-md">
    <div class="container mx-auto px-6 py-4 flex justify-between items-center">
      <div class="text-2xl font-bold text-blue-600">Quiz Master</div>
      <ul class="hidden md:flex space-x-6 text-lg">
        <li><a href="/" class="text-gray-700 hover:text-blue-500">Home</a></li>
        <li><a href="/about" class="text-gray-700 hover:text-blue-500">About</a></li>
        <li><a href="/contact" class="text-gray-700 hover:text-blue-500">Contact</a></li>
      </ul>
      <div class="relative">
        <input type="text" placeholder="Search..." class="px-4 py-2 border rounded-full focus:outline-none focus:ring focus:ring-blue-300">
        <i class="fas fa-search absolute right-3 top-3 text-gray-500"></i>
      </div>
    </div>
  </nav>

  <!-- Hero Section -->
  <section class="text-center py-16">
    <div class="container mx-auto px-6">
      <h1 class="text-4xl font-bold text-gray-800">Welcome to Quiz Master!</h1>
      <p class="mt-3 text-lg text-gray-600">Test your knowledge across various topics. Choose a topic to start.</p>
    </div>
  </section>

  <!-- Quiz Topics with Images -->
  <section class="container mx-auto px-6 py-8">
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-6">
      <!-- Science Card -->
      <div class="topic-card relative rounded-lg shadow-lg cursor-pointer overflow-hidden group" data-topic="science">
        <img src="https://img.freepik.com/free-vector/hand-drawn-science-education-background_23-2148499325.jpg?semt=ais_hybrid" alt="Science" class="w-full h-48 object-cover transition-transform transform group-hover:scale-110">
        <div class="absolute inset-0 bg-black bg-opacity-50 flex items-center justify-center">
          <h3 class="text-white text-xl font-semibold">Science</h3>
        </div>
      </div>

      <!-- History Card -->
      <div class="topic-card relative rounded-lg shadow-lg cursor-pointer overflow-hidden group" data-topic="history">
        <img src="https://www.shutterstock.com/image-vector/history-subject-conceptlettering-card-vector-260nw-1110756569.jpg" alt="History" class="w-full h-48 object-cover transition-transform transform group-hover:scale-110">
        <div class="absolute inset-0 bg-black bg-opacity-50 flex items-center justify-center">
          <h3 class="text-white text-xl font-semibold">History</h3>
        </div>
      </div>

      <!-- Technology Card -->
      <div class="topic-card relative rounded-lg shadow-lg cursor-pointer overflow-hidden group" data-topic="technology">
        <img src="https://plus.unsplash.com/premium_photo-1681426687411-21986b0626a8?w=600&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzfDB8MHxzfHx8fA%3D%3D" alt="Technology" class="w-full h-48 object-cover transition-transform transform group-hover:scale-110">
        <div class="absolute inset-0 bg-black bg-opacity-50 flex items-center justify-center">
          <h3 class="text-white text-xl font-semibold">Technology</h3>
        </div>
      </div>

      <!-- Sports Card -->
      <div class="topic-card relative rounded-lg shadow-lg cursor-pointer overflow-hidden group" data-topic="sports">
        <img src="https://images.unsplash.com/photo-1587565221089-a511c964ca95?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="Sports" class="w-full h-48 object-cover transition-transform transform group-hover:scale-110">
        <div class="absolute inset-0 bg-black bg-opacity-50 flex items-center justify-center">
          <h3 class="text-white text-xl font-semibold">Sports</h3>
        </div>
      </div>
    </div>
  </section>

  <!-- Start Quiz Button -->
  <div class="text-center mt-8">
    <a href="#" id="start-quiz" class="bg-blue-600 text-white py-3 px-8 rounded-full shadow-lg hover:bg-blue-700 transition opacity-50 cursor-not-allowed">Start Quiz</a>
  </div>

  <script>
    let selectedTopic = null;

    // Select topic on click
    document.querySelectorAll(".topic-card").forEach(card => {
      card.addEventListener("click", function() {
        document.querySelectorAll(".topic-card").forEach(c => c.classList.remove("border-4", "border-blue-600"));
        this.classList.add("border-4", "border-blue-600");
        selectedTopic = this.getAttribute("data-topic");

        // Enable start quiz button
        const startButton = document.getElementById("start-quiz");
        startButton.classList.remove("opacity-50", "cursor-not-allowed");
        startButton.href = `/quiz?topic=${selectedTopic}`;
      });
    });
  </script>

</body>
</html>
